@model List<Pessoa>
@{ 
    var pessoas = Model;
    var rowCount = 1;
}
<div class="container">
    <!-- START THE FEATURETTES -->
    <div class="row featurette">
        <div class="col-md-6 my-5">
            <h2 class="display-4">O presente que é bom <span class=" text-primary">lembra</span> de trazer. xD</h2>
            <p class="lead">Aqui você pode ver todos os aniversariantes cadastrados e também fazer uma busca pelo nome</p>
            <form action="/pessoas/listar" method="get" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar nome" aria-label="Search" name="buscar">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>
        </div>
        <div class="col-md-6 d-none d-md-block" style="background: url(https://i.ibb.co/PhxZDjg/undraw-birthday-girl-n46w.png) no-repeat center center / contain; min-height: 300px;"></div>
    </div>
</div>

<div class="container">
    <hr class="my-5" />
    <table class="table table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">Nº</th>
                <th scope="col">Nome</th>
                <th scope="col">CakeDay</th>
                <th scope="col">Celular</th>
                <th scope="col">Detalhes</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var pessoa in pessoas)
            {
                <tr>
                    <th scope="row">@(rowCount)</th>
                    <td>@pessoa.Nome</td>
                    <td>@pessoa.DataNasc</td>
                    <td>@pessoa.Celular</td>
                    <td><a class="btn btn-success" href="/Pessoas/Detalhar?idnumber=@pessoa.IdNumber" role="button"><i class="fas fa-search-plus"></i> Ver</a></td>
                    <td>
                        <a class="btn btn-primary" href="/Pessoas/Editar?idnumber=@pessoa.IdNumber" role="button"><i class="fas fa-user-edit"></i> Editar</a>
                        <a class="btn btn-danger" href="/Pessoas/Remover?idnumber=@pessoa.IdNumber" role="button"><i class="fas fa-minus-circle"></i> Remover</a>
                    </td>
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>
