@model Pessoa
@{
    var pessoas = Model;
}
<div class="container">
    <div class="row featurette">

        <div class="my-5 col-md-6">
            <h2 class="display-4">Dados do<br /><span class=" text-primary">aniversariante</span></h2>
            <p class="lead">Sem essas informações vai ficar difícil de te ajudar :)</p>
        </div>
        <div class="col-md-6 d-none d-md-block" style=" background: url('https://i.ibb.co/rbHsCms/undraw-Online-party-re-7t6g.png') no-repeat center center / contain;
        min-height: 300px;">
        </div>

    </div>

    <div class="row featurette">

        <div class="col-md-6">
            <form action="/Pessoas/Cadastrar" method="post">
                <div class="form-group">
                    <label for="InputNome">Numero de Identificação</label>
                    <!--<input type="text" class="form-control" name="idnumber" value="">-->
                </div>
                <div class="form-group">
                    <label for="InputNome">Nome</label>
                    <input type="text" class="form-control" id="InputNome" name="nome" required>
                </div>
                <div class="form-group">
                    <label for="InputCelular">Celular</label>
                    <input type="number" class="form-control" id="InputCelular" name="celular" required>
                </div>
                <div class="form-group">
                    <label for="InputDataNasc">Data de Nascimento</label>
                    <input type="date" class="form-control" id="InputDataNasc" name="datanasc" required>
                </div>
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a href="/Pessoas/Listar" class="btn btn-primary">Aniversariantes</a>
            </form>
        </div>


    </div>

</div>